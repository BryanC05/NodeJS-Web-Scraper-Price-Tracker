<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Search - Price Tracker</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .search-container {
      max-width: 900px;
      margin: 0 auto;
    }
    
    .search-box {
      background: white;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 2px 12px rgba(0,0,0,0.08);
      margin-bottom: 30px;
    }
    
    .search-form {
      display: flex;
      gap: 10px;
    }
    
    .search-form input {
      flex: 1;
      padding: 15px;
      border: 2px solid #e1e4e8;
      border-radius: 8px;
      font-size: 16px;
    }
    
    .search-form input:focus {
      outline: none;
      border-color: #3498db;
    }
    
    .search-form button {
      padding: 15px 30px;
      background: #3498db;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      cursor: pointer;
    }
    
    .search-form button:hover {
      background: #2980b9;
    }
    
    .search-form button:disabled {
      background: #95a5a6;
      cursor: not-allowed;
    }
    
    .price-summary {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }
    
    .price-card {
      background: white;
      padding: 25px;
      border-radius: 12px;
      box-shadow: 0 2px 12px rgba(0,0,0,0.08);
      text-align: center;
    }
    
    .price-card.cheapest {
      border: 3px solid #27ae60;
    }
    
    .price-card.standard {
      border: 3px solid #3498db;
    }
    
    .price-card .label {
      font-size: 14px;
      color: #7f8c8d;
      margin-bottom: 10px;
    }
    
    .price-card .price {
      font-size: 36px;
      font-weight: 700;
    }
    
    .price-card.cheapest .price {
      color: #27ae60;
    }
    
    .price-card.standard .price {
      color: #3498db;
    }
    
    .results-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 20px;
    }
    
    .result-card {
      background: white;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 2px 12px rgba(0,0,0,0.08);
      transition: transform 0.2s;
    }
    
    .result-card:hover {
      transform: translateY(-3px);
    }
    
    .result-card.is-cheapest {
      border: 2px solid #27ae60;
    }
    
    .result-card img {
      width: 100%;
      height: 150px;
      object-fit: contain;
      margin-bottom: 15px;
    }
    
    .result-card .title {
      font-size: 14px;
      font-weight: 600;
      margin-bottom: 10px;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    .result-card .source {
      font-size: 12px;
      color: #7f8c8d;
      margin-bottom: 10px;
    }
    
    .result-card .price-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .result-card .price {
      font-size: 20px;
      font-weight: 700;
    }
    
    .result-card .price.cheapest {
      color: #27ae60;
    }
    
    .result-card .view-btn {
      padding: 8px 15px;
      background: #3498db;
      color: white;
      text-decoration: none;
      border-radius: 6px;
      font-size: 12px;
    }
    
    .loading {
      text-align: center;
      padding: 40px;
    }
    
    .loading-spinner {
      border: 4px solid #f3f3f3;
      border-top: 4px solid #3498db;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      animation: spin 1s linear infinite;
      margin: 0 auto 20px;
    }
    
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
    
    .nav {
      display: flex;
      gap: 20px;
      margin-bottom: 30px;
    }
    
    .nav a {
      padding: 10px 20px;
      background: white;
      color: #333;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 500;
    }
    
    .nav a.active {
      background: #3498db;
      color: white;
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <h1>üîç Product Price Search</h1>
      <div class="nav">
        <a href="/">Dashboard</a>
        <a href="/search" class="active">Search</a>
      </div>
    </header>

    <div class="search-container">
      <div class="search-box">
        <form class="search-form" id="searchForm">
          <input 
            type="text" 
            id="searchInput" 
            placeholder="Search for products (e.g., iPhone 15, Nike shoes, Sony camera)..." 
            required
          >
          <button type="submit" id="searchBtn">Search</button>
        </form>
      </div>

      <div id="results"></div>
    </div>
  </div>

  <script>
    const searchForm = document.getElementById('searchForm');
    const searchInput = document.getElementById('searchInput');
    const searchBtn = document.getElementById('searchBtn');
    const resultsDiv = document.getElementById('results');

    searchForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      const query = searchInput.value.trim();
      if (!query) return;

      searchBtn.disabled = true;
      searchBtn.textContent = 'Searching...';
      resultsDiv.innerHTML = `
        <div class="loading">
          <div class="loading-spinner"></div>
          <p>Mencari di Tokopedia, Shopee, Bukalapak, Lazada...</p>
        </div>
      `;

      try {
        const res = await fetch('/api/search?q=' + encodeURIComponent(query));
        const data = await res.json();

        if (!data.success) {
          throw new Error(data.error);
        }

        displayResults(data.results);
      } catch (error) {
        resultsDiv.innerHTML = `
          <div class="loading">
            <p style="color: red;">Error: ${error.message}</p>
          </div>
        `;
      } finally {
        searchBtn.disabled = false;
        searchBtn.textContent = 'Search';
      }
    });

    function displayResults(results) {
      if (!results.results || results.results.length === 0) {
        resultsDiv.innerHTML = `
          <div class="loading">
            <p>No results found for "${results.query}"</p>
          </div>
        `;
        return;
      }

      const cheapest = results.cheapest;
      const isDemo = results.results[0]?.source === 'Estimated';
      const currency = results.currency || 'IDR';
      const demoNotice = isDemo ? `
        <div style="background: #fff3cd; border: 1px solid #ffc107; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
          <strong>‚ö†Ô∏è Estimated Prices:</strong> Showing price estimates based on product category. 
          For real prices from Indonesian sites, a paid ScrapingBee plan is needed.
        </div>
      ` : '';
      
      const formatPrice = (price) => {
        return 'Rp ' + price.toLocaleString('id-ID');
      };
      
      const html = `
        ${demoNotice}
        <div class="price-summary">
          <div class="price-card cheapest">
            <div class="label">üíö Termurah</div>
            <div class="price">${formatPrice(cheapest.price)}</div>
            <div class="label">${cheapest.source}</div>
          </div>
          <div class="price-card standard">
            <div class="label">üìä Harga Normal</div>
            <div class="price">${formatPrice(results.standardPrice)}</div>
            <div class="label">Rata-rata Pasar</div>
          </div>
          <div class="price-card">
            <div class="label">üìà Rata-rata</div>
            <div class="price">${formatPrice(results.averagePrice)}</div>
            <div class="label">${results.totalResults} hasil</div>
          </div>
        </div>
        
        <h2 style="margin-bottom: 20px;">Semua Hasil (${results.results.length})</h2>
        
        <div class="results-grid">
          ${results.results.map((item, idx) => `
            <div class="result-card ${item === cheapest ? 'is-cheapest' : ''}">
              ${item.image ? `<img src="${item.image}" alt="${item.title}">` : '<div style="height:150px;background:#f5f5f5;display:flex;align-items:center;justify-content:center;margin-bottom:15px;">üì¶</div>'}
              <div class="title">${item.title}</div>
              <div class="source">${item.source}</div>
              <div class="price-row">
                <span class="price ${item === cheapest ? 'cheapest' : ''}">
                  ${item === cheapest ? 'üíö ' : ''}${formatPrice(item.price)}
                </span>
                <a href="${item.link}" target="_blank" class="view-btn">View</a>
              </div>
            </div>
          `).join('')}
        </div>
      `;

      resultsDiv.innerHTML = html;
    }
  </script>
</body>
</html>
